{
  // =============================================================================
  // PREMIUM TIER CONFIGURATION (OpenRouter)
  // =============================================================================
  // Quality-first approach. Uses best models for primary agents and critical
  // tasks. Cost is secondary to output quality.
  //
  // PRICING REFERENCE (as of Jan 2026):
  //   anthropic/claude-opus-4.5       - $5.00/$25.00  - Best reasoning
  //   anthropic/claude-sonnet-4.5     - $3.00/$15.00  - 1M context, excellent
  //   anthropic/claude-haiku-4.5      - $1.00/$5.00   - Fast, 200K context
  //   openai/o3                       - $2.00/$8.00   - Deep reasoning
  //   openai/gpt-5-codex              - $1.25/$10.00  - Code-focused
  //   google/gemini-2.5-pro           - $1.25/$10.00  - 1M context
  //
  // STRATEGY: Claude Opus for orchestration and complex reasoning, Claude Sonnet
  // for coding and daily work, specialized models for specific tasks.
  //
  // ESTIMATED COST: ~$6.00 per 1M tokens blended
  //
  // LAST UPDATED: Jan 2026 (OpenRouter API sync)
  // =============================================================================

  "plugin": [
    "@tarquinen/opencode-dcp@{{DCP_VERSION}}"
  ],
  "$schema": "https://opencode.ai/config.json",

  "provider": {
    "openrouter": {
      "options": {
        "apiKey": "{{OPENROUTER_API_KEY}}",
        "baseURL": "{{RELAY_BASE_URL}}"
      }
    }
  },

  "agent": {
    // =========================================================================
    // PRIMARY AGENTS (user-facing, maximum quality)
    // =========================================================================

    // --- Core Agents ---
    "openagent": {
      "description": "Universal agent for queries, tasks, and workflow coordination",
      "mode": "primary",
      // Claude Sonnet 4.5 - $3.00/$15.00 - 1M context, excellent orchestration
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "opencoder": {
      "description": "Multi-language coding specialist with plan-approve-execute workflow",
      "mode": "primary",
      // Claude Opus 4.5 - $5.00/$25.00 - best coding quality (user requested)
      "model": "openrouter/anthropic/claude-opus-4.5"
    },

    // --- Development Specialists ---
    "codebase-agent": {
      "description": "Primary development agent for multi-language codebases",
      "mode": "primary",
      // Claude Sonnet 4.5 - excellent for codebase work
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "backend-specialist": {
      "description": "API design, database architecture, and server-side development",
      "mode": "primary",
      // Claude Sonnet 4.5 - backend patterns
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "frontend-specialist": {
      "description": "UI design with design systems, themes, and animations",
      "mode": "primary",
      // Claude Sonnet 4.5 - UI/UX patterns
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "devops-specialist": {
      "description": "CI/CD, infrastructure, Docker, Kubernetes, Terraform",
      "mode": "primary",
      // Gemini 2.5 Pro - $1.25/$10.00 - 1M context, good for infra
      "model": "openrouter/google/gemini-2.5-pro"
    },

    // --- Meta Agents ---
    "system-builder": {
      "description": "Meta-level generator for custom AI architectures and agent systems",
      "mode": "primary",
      // Claude Opus 4.5 - needs exceptional reasoning for agent systems
      "model": "openrouter/anthropic/claude-opus-4.5"
    },
    "repo-manager": {
      "description": "Repository management with lazy context loading and smart delegation",
      "mode": "primary",
      // Claude Sonnet 4.5 - repo management
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },

    // --- Content Agents ---
    "copywriter": {
      "description": "Marketing copy, blog posts, and persuasive content creation",
      "mode": "primary",
      // Claude Sonnet 4.5 - creative writing is a strength
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "technical-writer": {
      "description": "Technical documentation, API docs, and developer guides",
      "mode": "primary",
      // Claude Sonnet 4.5 - technical accuracy + clarity
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },

    // --- Data Agents ---
    "data-analyst": {
      "description": "Data analysis, visualization recommendations, and insights",
      "mode": "primary",
      // Claude Sonnet 4.5 - analytical tasks
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },

    // =========================================================================
    // SUBAGENTS (automated, balance quality and frequency)
    // =========================================================================

    // --- Code Subagents ---
    "coder-agent": {
      "description": "Executes coding subtasks following plans from primary agents",
      "mode": "subagent",
      // Claude Haiku 4.5 - $1.00/$5.00 - fast implementation
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },
    "reviewer": {
      "description": "Code review, security analysis, and quality assurance",
      "mode": "subagent",
      // Claude Sonnet 4.5 - CRITICAL: security reviews need quality
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "tester": {
      "description": "Test authoring and TDD with AAA pattern",
      "mode": "subagent",
      // GPT-5 Codex - $1.25/$10.00 - code-focused testing
      "model": "openrouter/openai/gpt-5-codex"
    },
    "build-agent": {
      "description": "Type checking and build validation",
      "mode": "subagent",
      // Gemini 2.5 Pro - $1.25/$10.00 - 1M context for builds
      "model": "openrouter/google/gemini-2.5-pro"
    },
    "codebase-pattern-analyst": {
      "description": "Finds code patterns and examples in codebase",
      "mode": "subagent",
      // Claude Sonnet 4.5 - pattern recognition
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },

    // --- Core Subagents ---
    "task-manager": {
      "description": "Complex task breakdown into atomic subtasks with dependencies",
      "mode": "subagent",
      // o3 - $2.00/$8.00 - deep reasoning for task decomposition
      "model": "openrouter/openai/o3"
    },
    "documentation": {
      "description": "Documentation authoring for README, specs, developer docs",
      "mode": "subagent",
      // Claude Haiku 4.5 - fast docs
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },
    "context-retriever": {
      "description": "Context search and retrieval for finding relevant files and standards",
      "mode": "subagent",
      // Claude Haiku 4.5 - fast search
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },

    // --- System Builder Subagents ---
    "domain-analyzer": {
      "description": "Analyzes domains to identify concepts, agents, and context structure",
      "mode": "subagent",
      // Claude Sonnet 4.5 - domain analysis needs reasoning
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "agent-generator": {
      "description": "Generates XML-optimized agent files following research-backed patterns",
      "mode": "subagent",
      // Claude Sonnet 4.5 - structured generation
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "context-organizer": {
      "description": "Organizes and generates context files for knowledge management",
      "mode": "subagent",
      // Claude Haiku 4.5 - categorization
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },
    "workflow-designer": {
      "description": "Designs workflow definitions with context dependencies",
      "mode": "subagent",
      // Claude Sonnet 4.5 - workflow planning
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    },
    "command-creator": {
      "description": "Creates custom slash commands with clear syntax and examples",
      "mode": "subagent",
      // Claude Haiku 4.5 - templated work
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },

    // --- Utility Subagents ---
    "image-specialist": {
      "description": "Image generation and editing using Gemini AI",
      "mode": "subagent",
      // Gemini 2.5 Flash - image coordination
      "model": "openrouter/google/gemini-2.5-flash"
    },

    // =========================================================================
    // UTILITY AGENTS (high frequency, use efficient models)
    // =========================================================================
    "title": {
      "description": "Session title generation",
      // Claude Haiku 4.5 - $1.00/$5.00 - simple summarization
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },
    "summary": {
      "description": "Session summary generation",
      // Claude Haiku 4.5 - summarization
      "model": "openrouter/anthropic/claude-haiku-4.5"
    },
    "compaction": {
      "description": "Context compaction agent",
      // Claude Sonnet 4.5 - $3.00/$15.00 - excellent summarization quality
      "model": "openrouter/anthropic/claude-sonnet-4.5"
    }
  }
}
