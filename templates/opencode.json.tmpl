{
  "$schema": "https://opencode.ai/schemas/opencode.json",
  "theme": "opencode",
  "plugin": [
    "@tarquinen/opencode-dcp@1.2.0",
    "oh-my-opencode@2.14.0"
  ],
  "model": "openrouter/{{ORCHESTRATOR_MODEL}}",
  "provider": {
    "openrouter": {
      "options": {
        "apiKey": "{{OPENROUTER_API_KEY}}",
        "baseURL": "{{RELAY_BASE_URL}}"
      },
      "models": {
        "{{ORCHESTRATOR_MODEL}}": {},
        "{{PLANNER_MODEL}}": {},
        "{{LIBRARIAN_MODEL}}": {},
        "{{GENIUS_MODEL}}": {},
        "{{FALLBACK_MODEL}}": {}
      }
    }
  },
  "agent": {
    "build": {
      "model": "openrouter/{{ORCHESTRATOR_MODEL}}"
    },
    "plan": {
      "model": "openrouter/{{PLANNER_MODEL}}"
    },
    "general": {
      "model": "openrouter/{{ORCHESTRATOR_MODEL}}"
    },
    "explore": {
      "model": "openrouter/{{LIBRARIAN_MODEL}}"
    },
    "compaction": {
      "model": "openrouter/{{LIBRARIAN_MODEL}}"
    },
    "title": {
      "model": "openrouter/{{LIBRARIAN_MODEL}}"
    },
    "summary": {
      "model": "openrouter/{{LIBRARIAN_MODEL}}"
    }
  }
}
