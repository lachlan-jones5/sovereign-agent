{
  "theme": "opencode",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "oh-my-opencode"
  ],
  "provider": {
    "openrouter": {
      "apiKey": "{{OPENROUTER_API_KEY}}",
      "model": "{{ORCHESTRATOR_MODEL}}",
      "options": {
        "zdr": true,
        "site_url": "{{SITE_URL}}",
        "site_name": "{{SITE_NAME}}",
        "provider": {
          "order": {{PROVIDER_WHITELIST}},
          "allow_fallbacks": false
        }
      }
    }
  },
  "models": {
    "default": "openrouter/{{ORCHESTRATOR_MODEL}}",
    "planner": "openrouter/{{PLANNER_MODEL}}",
    "librarian": "openrouter/{{LIBRARIAN_MODEL}}"
  },
  "model_config": {
    "openrouter/{{ORCHESTRATOR_MODEL}}": {
      "max_tokens": {{ORCHESTRATOR_MAX_TOKENS}}
    },
    "openrouter/{{PLANNER_MODEL}}": {
      "max_tokens": {{PLANNER_MAX_TOKENS}}
    },
    "openrouter/{{LIBRARIAN_MODEL}}": {
      "max_tokens": {{LIBRARIAN_MAX_TOKENS}}
    }
  },
  "tools": {
    "write": true,
    "bash": true,
    "mcp": true
  }
}
